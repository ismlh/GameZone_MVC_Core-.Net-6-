@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">

    @foreach(var game in Model)
    {
        <div class="col-lg-4 col-md-3 text-secondary">
            <div class="card border-success mb-3" style="min-height: 400px;">
                <div class="card-body text-success" style="background-image:url(@($"{Utilites.ImagePath}{game.Cover}"));background-size:cover;background-position:center;">
                    <div class="h-100 d-flex align-items-end fs-4">
                        <span class="badge bg-info border-0">@game.Category.Name</span>
                    </div>  
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <h5 class="fw-bolder text-muted ">@game.Name</h5>
                    <div>
                        @foreach (var icon in game.GameDevices)
                        {
                            <i class="@icon.Device.Icon me-1 fs-4"></i>
                        }
                    </div>
                   
                </div>
            </div>
        </div>
    }
</div>
